generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Hotel {
  id       Int @id @default(autoincrement())
  nome     String
  endereco String
  quartos  Quarto[]
}

model Quarto{
  id        Int @id @default(autoincrement())
  numero    String
  tipo      String
  preco     Float
  hotelId   Int
  hotel     Hotel @relation(fields: [hotelId], references: [id])
  reservas  Reserva[]


}

model Reserva {
  id          Int @id @default(autoincrement())
  cliente     String
  email       String
  dataInicio  DateTime
  dataFim     DateTime
  quartoId    Int
  quarto      Quarto @relation(fields: [quartoId], references: [id])
}


