generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Hotel {
  id        Int      @id @default(autoincrement())
  nome      String
  endereco  String
  createdAt DateTime @default(now())
  quartos   Quarto[]
  reservas  Reserva[]
}

model Quarto{
  id        Int @id @default(autoincrement())
  numero    String
  tipo      String
  preco     Float
  hotelId   Int
  hotel     Hotel @relation(fields: [hotelId], references: [id])
  reservas  Reserva[]
  createdAt DateTime @default(now())
}

model User {
  id        Int      @id @default(autoincrement())
  nome      String
  email     String   @unique
  senha     String
  role      UserRole @default(CLIENT)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  reservas  Reserva[]
}

enum UserRole {
  ADMIN
  CLIENT
}

model Reserva {
  id          Int @id @default(autoincrement())
  createdAt   DateTime @default(now())
  cliente     String
  email       String
  dataInicio  DateTime
  dataFim     DateTime
  stayDuration Int?
  quartoId    Int
  quarto      Quarto @relation(fields: [quartoId], references: [id])
  hotelId     Int
  hotel       Hotel  @relation(fields: [hotelId], references: [id])
  userId      Int?
  user        User?   @relation(fields: [userId], references: [id])
}


